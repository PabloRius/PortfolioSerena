---
import { IoLogoInstagram, IoLogoLinkedin, IoMail } from "react-icons/io5";

import Profile from "../assets/images/Profile.jpeg";
import eng_data from "../data/eng.json";
---

<section
  class="md:min-h-screen justify-center h-auto flex flex-col gap-3 conte-center md:gap-5 py-5 px-[10px] md:pb-0 md:px-[25px] bg-gradient-to-b from-main-green-shade2 via-main-green-shade1 to-main-green-shade0"
>
  <div class="flex flex-col md:flex-row gap-5 items-center justify-between">
    <div
      class="max-w-[90%] md:max-w-[40%] max-h-[100%] w-[90%] rounded-[100%] aspect-square overflow-hidden flex items-center justify-center"
    >
      <img
        src={Profile.src}
        alt="Serena Indij da Costa in Paris"
        class="h-auto w-auto max-w-[100%] max-h-[100%]"
      />
    </div>
    <div class="w-[90%] md:w-[60%] flex flex-col m-0">
      <h3
        class="my-1 md:my-2 font-bold text-[1.6rem] md:text-[clamp(1.4rem,2vw,1.75rem)]"
      >
        {"Hey there! Iâ€™m Serena"}
      </h3>
      <h4
        class="font-semibold text-[1.4rem] md:text-[clamp(1.2rem,2vw,1.5rem)]"
      >
        MSc in Development Management (Applied Economics) and MA in
        International Economic Policy (Diplomacy)
      </h4>
      <p class="prose text-[1.3rem] md:text-[clamp(1.1rem,2vw,1.45rem)]">
        {eng_data.introduction}
      </p>
    </div>
  </div>
  <div class="flex flex-col gap-4 items-center">
    <div class="flex flex-row gap-4">
      <a
        href="mailto:serena.indij.da.costa@gmail.com"
        target="_blank"
        rel="noopener noreferrer"
        class="p-3 rounded-full bg-transparent hover:bg-blue-50 transition-all duration-300 hover:shadow-lg transform hover:-translate-y-1"
        aria-label="Email me"
      >
        <IoMail size={40} color="#367da2" client:load />
      </a>

      <a
        href="https://www.instagram.com/sere_viaja/?hl=en"
        target="_blank"
        rel="noopener noreferrer"
        class="p-3 rounded-full bg-transparent hover:bg-pink-50 transition-all duration-300 hover:shadow-lg transform hover:-translate-y-1"
        aria-label="My Instagram"
      >
        <IoLogoInstagram size={40} color="#dd2985" client:load />
      </a>

      <a
        href="https://www.linkedin.com/in/serena-indij-da-costa/"
        target="_blank"
        rel="noopener noreferrer"
        class="p-3 rounded-full bg-transparent hover:bg-blue-50 transition-all duration-300 hover:shadow-lg transform hover:-translate-y-1"
        aria-label="My LinkedIn"
      >
        <IoLogoLinkedin size={40} color="#0c65c3" client:load />
      </a>
    </div>

    <button
      type="button"
      class="relative flex items-center justify-center gap-3 px-12 py-6 bg-main-green hover:bg-main-green-dark text-white font-bold mx-auto rounded-2xl cursor-pointer transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl border-2 border-main-green-dark group overflow-hidden"
      data-id="download-btn"
      aria-label="Download my CV"
    >
      <span
        class="relative z-10 text-[1.3rem] md:text-[clamp(1.1rem,2vw,1.45rem)]"
      >
        Download my CV
      </span>

      <svg
        class="relative z-10 w-6 h-6 transition-transform duration-300 group-hover:translate-y-1"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
        ></path>
      </svg>

      <span
        class="absolute inset-0 bg-gradient-to-r from-main-green/20 to-main-green-dark/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
      ></span>
    </button>
  </div>
</section>

<script>
  const downloadCV = () => {
    const link = document.createElement("a");
    link.href = "/Serena_Indij_da_Costa_resume.pdf";
    link.download = "Serena_Indij_da_Costa_resume.pdf";
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };
  document
    .querySelector('[data-id="download-btn"]')
    ?.addEventListener("click", downloadCV);
</script>
