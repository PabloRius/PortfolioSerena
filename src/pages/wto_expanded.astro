---
import Layout from "../layouts/Layout.astro";
---

<Layout title="WTO - Know More">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <nav aria-label="Secondary navigation" class="mb-8">
      <a
        href="/"
        class="inline-flex items-center gap-3 px-6 py-3 text-lg font-medium bg-main-green text-white hover:bg-main-green-dark border-2 border-main-green-dark rounded-xl transition-all duration-300 transform hover:scale-[1.02] shadow-md hover:shadow-lg group"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="22"
          height="22"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="transition-transform duration-300 group-hover:-translate-x-1"
        >
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to Home
      </a>
    </nav>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12">
      <h2 class="text-4xl font-bold text-center mb-12 text-main-green-dark">
        Click on any button to know more!
        <span class="block mt-4 text-2xl font-normal text-gray-600">
          My experience at WTO
        </span>
      </h2>

      <!-- Responsive Grid -->
      <section class="grid grid-cols-1 sm:grid-cols-2 gap-6 place-items-center">
        <!-- External page button 1 -->
        <a
          href="https://www.wto.org/english/news_e/news25_e/ytl_03jul25_e.htm"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-col items-center justify-center w-full max-w-[280px] min-h-[100px] text-center border-2 border-main-green-dark bg-main-green hover:bg-main-green-dark text-white font-medium px-6 py-4 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-md hover:shadow-lg"
        >
          <span class="flex items-center justify-center gap-2">
            <!-- Document icon -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="22"
              height="22"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path
                d="M14 2H6a2 2 0 0 0-2 2v16c0 1.1.9 2 2 2h12a2 2 0 0 0 2-2V8z"
              ></path>
              <polyline points="14 2 14 8 20 8"></polyline>
            </svg>
            General Programme Information
          </span>
        </a>

        <!-- External page button 2 -->
        <a
          href="https://www.wto.org/english/news_e/news25_e/ytl_18sep25_e.htm"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-col items-center justify-center w-full max-w-[280px] min-h-[100px] text-center border-2 border-main-green-dark bg-main-green hover:bg-main-green-dark text-white font-medium px-6 py-4 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-md hover:shadow-lg"
        >
          <span class="flex items-center justify-center gap-2">
            <!-- User / person icon -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="22"
              height="22"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="7" r="4"></circle>
              <path d="M5.5 21a10.94 10.94 0 0 1 13 0"></path>
            </svg>
            Meeting with DG Okonjo-Iweala
          </span>
        </a>

        <!-- YouTube link 1 -->
        <a
          href="https://www.youtube.com/watch?v=HIcw1YJpOVo"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-col items-center justify-center w-full max-w-[280px] min-h-[100px] text-center border-2 border-main-green-dark bg-main-green hover:bg-main-green-dark text-white font-medium px-6 py-4 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-md hover:shadow-lg"
        >
          <span class="flex items-center justify-center gap-2">
            <!-- Play icon -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="22"
              height="22"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polygon points="5 3 19 12 5 21 5 3"></polygon>
            </svg>
            WTO Public Forum 2025
          </span>
        </a>

        <!-- YouTube link 2 -->
        <a
          href="https://www.youtube.com/watch?v=BmY_e3d-UoU"
          target="_blank"
          rel="noopener noreferrer"
          class="flex flex-col items-center justify-center w-full max-w-[280px] min-h-[100px] text-center border-2 border-main-green-dark bg-main-green hover:bg-main-green-dark text-white font-medium px-6 py-4 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-md hover:shadow-lg"
        >
          <span class="flex items-center justify-center gap-2">
            <!-- Play icon -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="22"
              height="22"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <polygon points="5 3 19 12 5 21 5 3"></polygon>
            </svg>
            AI in Latin America
          </span>
        </a>
      </section>
    </div>
  </div>
</Layout>
