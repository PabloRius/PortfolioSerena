---
import VideoGallery from "../components/VideoGallery";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Videos">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <nav aria-label="Secondary navigation" class="mb-8">
      <a
        href="/"
        class="inline-flex items-center gap-3 px-6 py-3 text-lg font-medium bg-main-green text-white hover:bg-main-green-dark border-2 border-main-green-dark rounded-xl transition-all duration-300 transform hover:scale-[1.02] shadow-md hover:shadow-lg group"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="22"
          height="22"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="transition-transform duration-300 group-hover:-translate-x-1"
        >
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to Home
      </a>
    </nav>

    <VideoGallery client:load />
  </div>
</Layout>
